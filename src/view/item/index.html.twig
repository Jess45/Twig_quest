{% extends 'base.html.twig' %}

{% block title %}My favourite instruments{% endblock %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="/public/assets/css/style.css" >
{% endblock %}



{% block content %}

    <h1>My favourite instruments</h1>

<div class="row">
        {% for instrument in instruments %}

    <div class="card col-lg-3 col-sm-8 col-md-4">

       <img src="{{ instrument["image"] }}" class="card-img-top img-thumbnail">
        <div class="badge-pill badge-info">{{ instrument['price'] }}</div>

        <div class="card-body">

            <h5 class="card-title"> {{ instrument['name'] }} </h5>

            <p class="card-text"> {{ instrument['description'] }}</p>


        </div>

    </div>
    {% endfor %}
    </div>


{% endblock %}